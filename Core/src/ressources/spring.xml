<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    Here we are creating the classes through beans, which will be provided.-->
    <bean id="Game" class="dk.sdu.mmmi.cbse.main.Game">
        <constructor-arg index="0" ref="iEntityProcessingService"/>
        <constructor-arg index="1" ref="iPostEntityProcessingService"/>
        <constructor-arg index="2" ref="iGamePluginService"/>
    </bean>
    <bean id="iEntityProcessingService" class="dk.sdu.mmmi.cbse.main.HelperClass" factory-method="getEntityProcessingServices"/>
    <bean id="iGamePluginService" class="dk.sdu.mmmi.cbse.main.HelperClass" factory-method="getPluginServices"/>
    <bean id="iPostEntityProcessingService" class="dk.sdu.mmmi.cbse.main.HelperClass" factory-method="getPostEntityProcessingServices"/>

</beans>